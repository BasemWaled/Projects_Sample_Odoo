<?xml version="1.0" encoding="UTF-8"?>
<template>
    <t t-name="ProjectDashBoardMain">
        <div class="o_control_panel">
            <div class="container-fluid">
                <div class="row">

                    <!-- Sales Section -->
                    <div class="col-md-3 mt-4" t-on-click="_onClickSales">
                        <div class="project_box" style="height: 180px">
                            <div class="row">
                                <div class="col-md-12 mt-5">
                                    <img src="basem_dash/static/images/icon.png"
                                         style="width: 50px; height: 50px" alt="sales"/>
                                </div>
                                <div class="col-md-12 mt-3">
                                    <span class="project_count">
                                        <t t-esc="state.sales_count"/>
                                    </span>
                                    <br/>
                                    <span class="sales_box_title">Sales Orders</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- CRM Leads Section -->
                    <div class="col-md-3 mt-4" t-on-click="_onClickLeads">
                        <div class="project_box" style="height: 180px">
                            <div class="row">
                                <div class="col-md-12 mt-5">
                                    <img src="basem_dash/static/images/icon.png"
                                         style="width: 50px; height: 50px" alt="leads"/>
                                </div>
                                <div class="col-md-12 mt-3">
                                    <span class="project_count">
                                        <t t-esc="state.leads_count"/>
                                    </span>
                                    <br/>
                                    <span class="sales_box_title">CRM Leads</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Invoices Section -->
                    <div class="col-md-3 mt-4" t-on-click="_onClickInvoices">
                        <div class="project_box" style="height: 180px">
                            <div class="row">
                                <div class="col-md-12 mt-5">
                                    <img src="basem_dash/static/images/icon.png"
                                         style="width: 50px; height: 50px" alt="invoices"/>
                                </div>
                                <div class="col-md-12 mt-3">
                                    <span class="project_count">
                                        <t t-esc="state.invoice_count"/>
                                    </span>
                                    <br/>
                                    <span class="sales_box_title">Invoices</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Bills Section -->
                    <div class="col-md-3 mt-4" t-on-click="_onClickBills">
                        <div class="project_box" style="height: 180px">
                            <div class="row">
                                <div class="col-md-12 mt-5">
                                    <img src="basem_dash/static/images/icon.png"
                                         style="width: 50px; height: 50px" alt="bills"/>
                                </div>
                                <div class="col-md-12 mt-3">
                                    <span class="project_count">
                                        <t t-esc="state.bill_count"/>
                                    </span>
                                    <br/>
                                    <span class="sales_box_title">Bills</span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </t>
</template>
