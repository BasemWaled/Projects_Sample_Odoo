<?xml version="1.0" encoding="UTF-8"?>
<template>
    <t t-name="ProjectDashBoardMain">
        <div class="o_control_panel">
            <div class="container-fluid">
                <div class="row justify-content-center">

                    <!-- CRM Leads Section -->
                    <div class="col-md-3 mt-3" t-on-click="_onClickLeads">
                        <div class="project_box leads_box shadow-sm rounded p-4 text-center">
                            <img src="dashboard_manager/static/images/crm_icon.png" class="mb-3" alt="Leads" width="40"
                                 height="40"/>
                            <div class="project_count">
                                <t t-esc="state.leads_count"/>
                            </div>
                            <div class="sales_box_title">CRM Leads</div>
                        </div>
                    </div>

                    <!-- Pipeline Section -->
                    <div class="col-md-3 mt-3" t-on-click="_onClickPipeline">
                        <div class="project_box pipeline_box shadow-sm rounded p-4 text-center">
                            <img src="dashboard_manager/static/images/crm_icon.png" class="mb-3" alt="Pipeline"
                                 width="40"
                                 height="40"/>
                            <div class="project_count">
                                <t t-esc="state.pipeline_count"/>
                            </div>
                            <div class="sales_box_title">Pipeline</div>
                        </div>
                    </div>

                    <!-- Quotations Section -->
                    <div class="col-md-3 mt-3" t-on-click="_onClickQuotations">
                        <div class="project_box quotations_box shadow-sm rounded p-4 text-center">
                            <img src="dashboard_manager/static/images/sale_icon.png" class="mb-3" alt="Quotations"
                                 width="40" height="40"/>
                            <div class="project_count">
                                <t t-esc="state.quotation_count"/>
                            </div>
                            <div class="sales_box_title">Quotations</div>
                        </div>
                    </div>

                    <!-- Sales Section -->
                    <div class="col-md-3 mt-3" t-on-click="_onClickSales">
                        <div class="project_box sales_box shadow-sm rounded p-4 text-center">
                            <img src="dashboard_manager/static/images/sale_icon.png" class="mb-3" alt="Sales" width="40"
                                 height="40"/>
                            <div class="project_count">
                                <t t-esc="state.sales_count"/>
                            </div>
                            <div class="sales_box_title">Sales Orders</div>
                        </div>
                    </div>

                    <!-- Team Section -->
                    <div class="col-md-3 mt-3" t-on-click="_onClickTeam">
                        <div class="project_box sales_box shadow-sm rounded p-4 text-center">
                            <img src="dashboard_manager/static/images/sale_icon.png" class="mb-3" alt="Sales" width="40"
                                 height="40"/>
                            <div class="project_count">
                                <t t-esc="state.sales_team_count"/>
                            </div>
                            <div class="sales_box_title">Sales Team</div>
                        </div>
                    </div>


                    <!-- Requests for Quotation Section -->
                    <div class="col-md-3 mt-3" t-on-click="_onClickRFQ">
                        <div class="project_box rfq_box shadow-sm rounded p-4 text-center">
                            <img src="dashboard_manager/static/images/purchase_icon.png" class="mb-3" alt="RFQ"
                                 width="40"
                                 height="40"/>
                            <div class="project_count">
                                <t t-esc="state.rfq_count"/>
                            </div>
                            <div class="sales_box_title">Requests for Quotation</div>
                        </div>
                    </div>

                    <!-- Purchase Orders Section -->
                    <div class="col-md-3 mt-3" t-on-click="_onClickPurchases">
                        <div class="project_box purchase_box shadow-sm rounded p-4 text-center">
                            <img src="dashboard_manager/static/images/purchase_icon.png" class="mb-3" alt="Purchases"
                                 width="40" height="40"/>
                            <div class="project_count">
                                <t t-esc="state.purchase_count"/>
                            </div>
                            <div class="sales_box_title">Purchase Orders</div>
                        </div>
                    </div>

                    <!-- Bills Section -->
                    <div class="col-md-3 mt-3" t-on-click="_onClickBills">
                        <div class="project_box bills_box shadow-sm rounded p-4 text-center">
                            <img src="dashboard_manager/static/images/invoice_icon.png" class="mb-3" alt="Bills"
                                 width="40"
                                 height="40"/>
                            <div class="project_count">
                                <t t-esc="state.bill_count"/>
                            </div>
                            <div class="sales_box_title">Bills</div>
                        </div>
                    </div>

                    <!-- Invoices Section -->
                    <div class="col-md-3 mt-3" t-on-click="_onClickInvoices">
                        <div class="project_box invoices_box shadow-sm rounded p-4 text-center">
                            <img src="dashboard_manager/static/images/invoice_icon.png" class="mb-3" alt="Invoices"
                                 width="40"
                                 height="40"/>
                            <div class="project_count">
                                <t t-esc="state.invoice_count"/>
                            </div>
                            <div class="sales_box_title">Invoices</div>
                        </div>
                    </div>


                    <!-- Customers Section -->
                    <div class="col-md-3 mt-3" t-on-click="_onClickCustomers">
                        <div class="project_box customers_box shadow-sm rounded p-4 text-center">
                            <img src="dashboard_manager/static/images/partner_icon.png" class="mb-3" alt="Customers"
                                 width="40"
                                 height="40"/>
                            <div class="project_count">
                                <t t-esc="state.customer_count"/>
                            </div>
                            <div class="sales_box_title">Customers</div>
                        </div>
                    </div>

                    <!-- Vendors Section -->
                    <div class="col-md-3 mt-3" t-on-click="_onClickVendors">
                        <div class="project_box vendors_box shadow-sm rounded p-4 text-center">
                            <img src="dashboard_manager/static/images/partner_icon.png" class="mb-3" alt="Vendors"
                                 width="40"
                                 height="40"/>
                            <div class="project_count">
                                <t t-esc="state.vendor_count"/>
                            </div>
                            <div class="sales_box_title">Vendors</div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </t>
</template>
